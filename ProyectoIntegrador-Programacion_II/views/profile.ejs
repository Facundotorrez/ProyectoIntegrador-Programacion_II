<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %> 
<body>
	
	<%- include('./partials/headerLogeado') %> 
	<!-- /Header -->

	<!-- Datos del usuario -->
	
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= usuario.imagenPerfil %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= usuario.nombreDeUsuario %> 
						<a href="/users/profile-edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>

				<div>
					<ul class="">
						<li> <%= usuario.email %>  </li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for(let i = 0; i < 8; i++) { %> 
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product">
						<figure class="product-box_image">
							<img src="<%= libros[i].imagenProduct %>"  alt="Harry Poter: El cÃ¡diz de fuego">
						</figure>
						<article class="product-box_data">
							<h2><%= libros[i].title %> </h2>
							<p><%= libros[i].description %></p>
						</article>
					</a>
				</section>
			</div>
			<% } %> 
		</div>
	</div>
	<!-- /Mis productos -->
	<%- include('./partials/footer') %> 
</body>	
</html>