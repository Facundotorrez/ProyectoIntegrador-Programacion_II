<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %> 
<body>
	
	<!-- Header -->
	<%- include('./partials/header') %> 
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title">A CIEGAS</h2> 
			<p class="product-detail-description">
				<a href="/products/product-add.ejs ">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="./images/products/aciegas.jpg" alt="" class="product-detail-img">
					<p class="product-detail-description">
						A ciegas</p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for(let i=0; i<comentarios.length; i++) { %> 	
						<article>
							<img src="<%= comentarios[i].foto_perfil %> " alt="">
							<div class="data">
								<p class="user">
								<strong> <a href="/users/profile"> <%= comentarios[i].nombre_usuario%> </a> </strong>
								 <%= comentarios[i].comentario %> </p>
							</div>
						</article>
					 <% } %>

					</section>
					<form class="form" action="" method="POST">
						<input class="form-input" name="comentario" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">COMENTAR</button>
					</form>
					<hr>
					
					
					<form class="form" action="" method="POST">
						<input class="form-input" name="comentario" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->


	<!-- /footer -->


	<%- include('./partials/footer') %> 


</body>	
</html>