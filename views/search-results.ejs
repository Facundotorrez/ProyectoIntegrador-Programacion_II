<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%-include('./partials/head.ejs', {titulo: 'Resultado de búsqueda - Bookit'})%>

<body>
	<!-- Header -->

	<% if (locals.user != undefined) { %> 
		<%-include('partials/headerLogeado') %>
	 <% } else { %> 
		<%- include('partials/header') %> 
    <% } %> 

	<!-- Header -->

	<!-- Novedades -->
	
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda</h2>
			</div>

	<!-- Novedades -->
	<% if(products.length>0) {%>
		<% for(let i=0; i< productos.length; i++){ %>
					<div class="col-12 col-sm-6 col-lg-3">
						<a href="/producto/<%= productos[i].id %>">
							<section class="product-box">
									<figure class="product-box_image">
										<img src="images/<%= productos[i].foto_producto %> " alt="Libro">
									</figure>
									<article class="product-box_data">
										<h2>Titulo: <%= productos[i].titulo%> </h2>
										<p> Marca: <%= productos[i].descripcion %></p>
									</article>
								</a>
							</section>
						</a>
					</div>
		<%  } %>
		<%}else{ %>
			<h2>No se encontraron resultados </h2>
		<%} %>

	<!-- footer -->

  <%-include('./partials/footer.ejs')%>

	<!-- footer -->
	

</body>

</html>